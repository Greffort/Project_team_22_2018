<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="100.0" minWidth="150.0" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.team22.Project_team_22_2018.view.CreateTaskFormController">
   <top>
       <TextField fx:id="taskNameTextField" promptText="Task name:" style="-fx-background-radius: 40;" BorderPane.alignment="CENTER">
           <font>
               <Font size="20.0"/>
           </font>
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </TextField>
   </top>
   <bottom>
      <BorderPane prefWidth="500.0" BorderPane.alignment="CENTER">
         <left>
             <DatePicker fx:id="taskDeadlineDatePicker" editable="false" prefHeight="25.0" prefWidth="170.0" promptText="Deadline date:" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" />
               </BorderPane.margin></DatePicker>
         </left>
         <right>
            <HBox prefHeight="51.0" prefWidth="101.0" style="-fx-background-radius: 10;" BorderPane.alignment="TOP_RIGHT">
               <children>
                   <Button onAction="#buttonCreateTask" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 40;">
                       <graphic>
                        <FontAwesomeIconView glyphName="PLUS" size="20" textAlignment="CENTER" />
                     </graphic>
                     <opaqueInsets>
                        <Insets right="10.0" />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="5.0" top="5.0" />
                     </HBox.margin>
                   </Button>
                   <Button fx:id="closeButton" contentDisplay="CENTER" onAction="#closeWindow" cacheShape="true" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 40;">
                       <graphic>
                        <FontAwesomeIconView glyphName="CLOSE" size="20" textAlignment="CENTER" />
                     </graphic>
                     <opaqueInsets>
                        <Insets left="100.0" />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                     </HBox.margin>
                   </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" right="10.0" />
               </BorderPane.margin>
            </HBox>
         </right>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </BorderPane>
   </bottom>
   <center>
       <TextArea fx:id="taskDescriptionTextArea" prefHeight="227.0" prefWidth="418.0" promptText="Description:" wrapText="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </BorderPane.margin>
      </TextArea>
   </center>
</BorderPane>
