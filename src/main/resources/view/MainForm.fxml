<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.team22.Project_team_22_2018.controllers.MainController">
   <top>
        <MenuBar fx:id="menuBar" prefHeight="0.0" prefWidth="450.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                  <MenuItem mnemonicParsing="false" onAction="#buttonAddTask" text="Add Task" />
                  <MenuItem mnemonicParsing="false" onAction="#saveAction" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#saveAction" text="Save As" />
                        <MenuItem mnemonicParsing="false" onAction="#closeAction" text="Close" />
                    </items>
                </Menu>
                <Menu fx:id="menuHelp" mnemonicParsing="false" onAction="#onHelpAction" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="Help" />
               </items></Menu>
            </menus>
        </MenuBar>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#loadAction" prefHeight="25.0" prefWidth="25.0" style="-fx-background-radius: 25px;" text="L" />
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#saveAction" prefHeight="25.0" prefWidth="25.0" style="-fx-background-radius: 25px;" text="S" />
                    <Button mnemonicParsing="false" onAction="#buttonEditTask" prefHeight="25.0" prefWidth="25.0" style="-fx-background-radius: 25;" text="E" />
                    <Button mnemonicParsing="false" onAction="#buttonRemoteTask" prefHeight="25.0" prefWidth="25.0" style="-fx-background-radius: 25;" text="-" />
                    <Button mnemonicParsing="false" onAction="#buttonAddTask" prefHeight="25.0" prefWidth="25.0" style="-fx-background-radius: 25;" text="+" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
              <TableView fx:id="tableViewTask" prefHeight="260.0" prefWidth="450.0" BorderPane.alignment="CENTER">
                  <columns>
                      <TableColumn fx:id="columnTask" prefWidth="130.0" text="Task" />
                      <TableColumn fx:id="columnDeadLine" prefWidth="111.0" text="DeadLine" />
                      <TableColumn fx:id="columnDescription" minWidth="0.0" prefWidth="208.0" text="Description" />
                  </columns>
              </TableView>
   </center>
</BorderPane>
